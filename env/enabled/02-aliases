#! /bin/bash


alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias editalias="nvim ~/etc/env/enabled/02-aliases"
alias env="env | sort"
alias more="less -r"
alias ls="ls --color"
alias mv="mv -iv"
alias rmf='rm -f'
alias rmrm='rm -rf'
alias where="type -all"
alias xml="xmllint --format -"
alias xcrmdd='rm -v -rf $HOME/Library/Developer/Xcode/DerivedData/*'
alias zelliful="zellij attach --create beautiful"

# temporary ohmyzsh removal coverage
alias ga.="git add ."
alias gcm="git commit -m"
alias gco="git checkout"
alias gd="git diff"
alias gdc="git diff --cached"
alias gpu="git pull"
alias gp="git push"
alias gst="git status"
alias grst="git restore -- "
alias gpsup="git push -u  "

# lsd defaults
alias l="lsd -l --color always --date '+%Y-%m-%d %H:%M:%S'"
